<%= render partial: 'partials/menu' %>
<h1>Upload</h1>
<div class="row">
  <p>Upload a CSV file and set the columns per each the database field</p>
  <div class="d-flex justify-content-center">
    <%= form_tag imported_files_import_path, multipart: true do %>
      <div>
        <%= file_field_tag "csv_file", required: true %>
      </div>
      
      <div class="pt-3">
        <% @columns.each_with_index do |col,index| %>
          <%= select_tag("col_#{index}", options_for_select(@columns, col)) %> <%= text_field_tag "input_#{index}", nil ,required: true %><br>
        <% end %>
      </div>
    
      <div class="pt-4 d-grid col-12 mx-auto">
        <%= submit_tag "Upload",class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>